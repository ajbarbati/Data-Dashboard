                  <div class="card-box">
                    <h4 class="header-title mt-0 mb-3">Day to Day Units</h4>

                    <canvas id="myChart3" width="400" height="200"></canvas>
                    <script>
                      var ctx = document
                        .getElementById("myChart3")
                        .getContext("2d")
                      var myChart = new Chart(ctx, {
                        type: "line",
                        data: {
                          labels: ["M", "T", "W", "T", "F", "S", "S"],
                          datasets: [
                            {
                              label: "Product A",
                              data: [12, 19, 3, 17, 6, 3, 7],
                              backgroundColor: "rgba(92, 184, 92,0.7)"
                            },
                            {
                              label: "Product B",
                              data: [2, 29, 5, 5, 2, 3, 10],
                              backgroundColor: "rgba(240, 173, 78,0.7) "
                            }
                          ]
                        }
                      })
                    </script>
                  </div>
                  <div class="card-box">
                        <h4 class="header-title mt-0 mb-3">Previous Four Years</h4>
                    <canvas id="myChart2" width="300" height="400"></canvas>
                    <script>
                      var ctx = document
                        .getElementById("myChart2")
                        .getContext("2d")

                      var original = Chart.defaults.global.legend.onClick
                      Chart.defaults.global.legend.onClick = function(
                        e,
                        legendItem
                      ) {
                        update_caption(legendItem)
                        original.call(this, e, legendItem)
                      }

                      var myChart = new Chart(ctx, {
                        type: "bar",
                        data: {
                          labels: ["2016", "2017", "2018", "2019"],
                          datasets: [
                            {
                              label: "Product A",
                              backgroundColor: "rgb(92, 184, 92)",
                              data: [12, 19, 3, 17, 28, 24, 7]
                            },
                            {
                              label: "Product B",
                              backgroundColor: "rgb(240, 173, 78)",
                              data: [30, 29, 5, 5, 20, 3, 10]
                            },
                            {
                              label: "Product C",
                              backgroundColor: "rgb(217, 83, 79)",
                              data: [3, 23, 24, 12, 10, 8, 11]
                            },
                            {
                              label: "Product D",
                              backgroundColor: "rgb(2, 117, 216)",
                              data: [30, 29, 15, 17, 26, 28, 7]
                            }
                          ]
                        }
                      })

                      var labels = {
                        apples: true,
                        oranges: true
                      }

                      var caption = document.getElementById("caption")

                      var update_caption = function(legend) {
                        labels[legend.text] = legend.hidden

                        var selected = Object.keys(labels).filter(function(
                          key
                        ) {
                          return labels[key]
                        })

                        var text = selected.length
                          ? selected.join(" & ")
                          : "nothing"

                        caption.innerHTML = "The chart is displaying " + text
                      }
                    </script>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
